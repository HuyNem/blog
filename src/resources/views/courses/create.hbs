<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form class="mt-4" method="post" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học: </label>
            <input type="text" class="form-control" id="name" placeholder="Nhập tên khóa học" name="name">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả: </label>
            <textarea type="text" class="form-control" id="name" placeholder="Nhập mô tả" rows="7"
                name="description"></textarea>
        </div>

        <div class="mb-3">
            <label for="videoid" class="form-label">Video ID: </label>
            <input type="text" class="form-control" id="videoid" placeholder="Video id" name="videoId">
        </div>

        <div class="mb-3">
            <label for="level" class="form-label">Trình độ: </label>
            <input type="text" class="form-control" id="level" placeholder="Nhập trình độ" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Đăng</button>
    </form>
</div>