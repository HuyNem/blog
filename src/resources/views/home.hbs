<a href="courses/create" type="button" class="btn btn-primary mt-4">Thêm mới khóa học</a>
<div class="mt-4">
    <div class="row">
        {{#each courses}}

        <div class="col-sm-6 col-lg-4 mt-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}"
                        class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-100-hover">
                        <h5 class="card-title ">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>

        {{/each}}

    </div>
</div>